{
  "name": "newproject",
  "version": "1.0.0",
  "description": "Javascript new project scaffolding",
  "main": "server.js",
  "repository": "https://github.com/txiverke/newProject.git",
  "author": "Xavier Vila <xavi.vila.albiol@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn dev:start",
    "dev:start": "nodemon --ignore lib --exec babel-node server",
    "prod:build": "rimraf build && babel src -d build --ignore .test.js",
    "prod:start": "cross-env NODE_ENV=production pm2 start server.js && pm2 logs",
    "prod:stop": "pm2 delete server",
    "test": "eslint src && jest --coverage"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "path": "^0.12.7",
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1 || ^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "pm2": "^3.2.2",
    "rimraf": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test"
    }
  }
}
